@model WorkshopManager.DTOs.VehicleDto
@{
    ViewData["Title"] = "Nowy pojazd";
}

<h2>@ViewData["Title"]</h2>


<form asp-action="Create" enctype="multipart/form-data" method="post" class="row g-3 col-md-6">

        <div class="col-12">
            <label class="form-label">Zdjęcie (opcjonalnie)</label>
            <input type="file" name="photo" accept="image/*" class="form-control"/>
            <span asp-validation-for="ImagePath" class="text-danger"></span>
        </div>
    <div class="col-12">
        <label asp-for="Make" class="form-label"></label>
        <input asp-for="Make" class="form-control"/>
        <span asp-validation-for="Make" class="text-danger"></span>
    </div>

    <div class="col-12">
        <label asp-for="Model" class="form-label"></label>
        <input asp-for="Model" class="form-control"/>
        <span asp-validation-for="Model" class="text-danger"></span>
    </div>

    <div class="col-12">
        <label asp-for="RegistrationNumber" class="form-label"></label>
        <input asp-for="RegistrationNumber" class="form-control"/>
        <span asp-validation-for="RegistrationNumber" class="text-danger"></span>
    </div>

    <div class="col-12">
        <label asp-for="Year" class="form-label"></label>
        <input asp-for="Year" type="number" min="1900" max="2100" class="form-control"/>
        <span asp-validation-for="Year" class="text-danger"></span>
    </div>

    <div class="col-12">
        <label asp-for="CustomerName" class="form-label">Klient (imię i nazwisko)</label>
        <input asp-for="CustomerName" class="form-control"/>
        <span asp-validation-for="CustomerName" class="text-danger"></span>
    </div>

    <div class="col-12">
        <button type="submit" class="btn btn-success">Zapisz</button>
        <a asp-action="Index" class="btn btn-secondary">Anuluj</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
