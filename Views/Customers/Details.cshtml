@model WorkshopManager.DTOs.CustomerDto
@{
    ViewData["Title"] = "Szczegóły klienta";
}

<h2>Szczegóły klienta</h2>

<div class="mb-3">
    <label class="form-label fw-bold">Imię i nazwisko:</label>
    <div>@Model.FullName</div>
</div>

<div class="mb-3">
    <label class="form-label fw-bold">Telefon:</label>
    <div>@Model.PhoneNumber</div>
</div>

<div class="mb-3">
    <label class="form-label fw-bold">Email:</label>
    <div>@Model.Email</div>
</div>

<a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edytuj</a>
<a asp-action="Index" class="btn btn-secondary">← Powrót</a>