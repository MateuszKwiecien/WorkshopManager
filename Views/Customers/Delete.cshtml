@model WorkshopManager.DTOs.CustomerDto
@{
    ViewData["Title"] = "Usuń klienta";
}

<h2>@ViewData["Title"]</h2>

<div class="alert alert-warning">
    Czy na pewno chcesz usunąć klienta
    <strong>@Model.FullName</strong>
    (tel. @Model.PhoneNumber, e-mail @Model.Email)?
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Tak, usuń</button>
    <a asp-action="Index" class="btn btn-secondary">Anuluj</a>
</form>