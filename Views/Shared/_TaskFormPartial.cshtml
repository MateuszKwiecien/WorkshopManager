@model WorkshopManager.DTOs.ServiceTaskDto

<div class="row g-3 col-md-6">
    <div class="col-12">
        <label asp-for="OrderId" class="form-label">Zlecenie</label>
        <select asp-for="OrderId" asp-items="ViewBag.OrderList"
                class="form-select" required></select>
        <span asp-validation-for="OrderId" class="text-danger"></span>
    </div>

    <div class="col-12">
        <label asp-for="Description" class="form-label">Opis zadania</label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="col-12">
        <label asp-for="Price" class="form-label">Cena robocizny</label>
        <input asp-for="Price" type="number" step="0.01" min="0"
               class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="col-12">
        <button type="submit" class="btn btn-success">Zapisz</button>
        <a asp-action="Index" asp-route-orderId="@Model.OrderId"
           class="btn btn-secondary">Anuluj</a>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}