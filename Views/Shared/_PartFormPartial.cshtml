@model WorkshopManager.DTOs.PartDto

<div class="row g-3 col-md-6">
    <div class="col-12">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="col-12">
        <label asp-for="Manufacturer" class="form-label">Producent</label>
        <input asp-for="Manufacturer" class="form-control" />
        <span asp-validation-for="Manufacturer" class="text-danger"></span>
    </div>

    <div class="col-12">
        <label asp-for="UnitPrice" class="form-label">Cena (brutto)</label>
        <input asp-for="UnitPrice" type="number" step="0.01" min="0" class="form-control" />
        <span asp-validation-for="UnitPrice" class="text-danger"></span>
    </div>

    <div class="col-12">
        <button type="submit" class="btn btn-success">Zapisz</button>
        <a asp-action="Index" class="btn btn-secondary">Anuluj</a>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}